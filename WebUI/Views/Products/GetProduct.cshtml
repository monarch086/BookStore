@model WebUI.Models.ProductViewModel

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Product.Name</h2>

<div>
    <h4>@Model.Product.Name</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>

<div class="text-center">
    @Html.ActionLink("Купить", "AddToCart", "Cart", new { productId = Model.Product.ProductId, returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-primary"})
    <a class="btn btn-primary" href="@Model.ReturnUrl">Назад</a>
</div>

