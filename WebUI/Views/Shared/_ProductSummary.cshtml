@using WebUI.Controllers
@model Domain.Entities.Product

<div class="well col-sm-3 col-xs-12" style="min-width: 250px; max-height: 190px; margin-right: 10px">
    <div class="row">
        <div>
            @if (/*Model.ImageData != null*/ true)
            {
                string Path = Html.Action("GetImage", "Products",
                    new {Model.ProductId}).ToString();

                <div class="pull-left" style="margin-right: 10px; max-height: 50px">
                    <img style="max-width: 80px; max-height: 80px;"
                         src="@Path"/>
                </div>
            }
        </div>
        <div>
            <h5>
                @Model.Name
            </h5>
        </div>
        <div>
            <div class="col-sm-6 col-xs-6" style="margin-top: -10px">
                <h3>
                    <strong id="price" class="pull-right label label-primary">
                        @Model.Price.ToString("# грн")
                    </strong>
                </h3>
            </div>
            <div class="col-sm-6 col-xs-6" style="margin-top: 7px">
                @using (Html.BeginForm("AddToCart", "Cart"))
                {
                    <div class="pull-right">
                        @Html.HiddenFor(x => x.ProductId)
                        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                        <input type="submit" class="btn btn-success" value="В корзину" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="container">
        <div class="top"></div>
        <div class="bottom">
            <div class="left">
                <div class="details">
                    <h3>@Model.Name</h3>
                    <p>@Model.Price.ToString("# грн")</p>
                </div>
                <div class="buy"><i class="material-icons">add_shopping_cart</i></div>
            </div>
            <div class="right">
                <div class="done"><i class="material-icons">done</i></div>
                <div class="details">
                    <h1>Chair</h1>
                    <p>Added to your cart</p>
                </div>
                <div class="remove"><i class="material-icons">clear</i></div>
            </div>
        </div>
    </div>
    <div class="inside">
        <div class="icon"><i class="material-icons">info_outline</i></div>
        <div class="contents">
            <table>
                <tr>
                    <th>Width</th>
                    <th>Height</th>
                </tr>
