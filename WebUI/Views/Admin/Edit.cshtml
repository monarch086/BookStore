@*@model WebUI.Models.ProductViewModel*@
@model Domain.Entities.Product

@{
    ViewBag.Title = "Админ панель: редактирование товара";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Редактирование товара "@Model.Name"</h3>
    </div>

    @using (Html.BeginForm("Edit", "Admin",
    FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel-body">
            @Html.HiddenFor(m => m.ProductId)
            @Html.ValidationSummary()

            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Manufacturer)
                    @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Description)
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5 })
                    @Html.ValidationMessage(Model.Description)
                </div>

                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Category)
                    @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Price)
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                </div>

                @*//Блок отображения картинок*@
                <div class="form-group">
                    <label>Картинки</label>

                    @*@if (Model.Images == null || Model.Images.Count() == 0)
                    {
                        <div class="form-control-static">Нет картинки</div>
                    }
                    else
                    {
                        foreach (var image in Model.Images)
                        {
                            <div class="form-group">
                                <img class="img-thumbnail" width="150" height="150"
                                     src="@image.Path" />
                                @Html.ActionLink("Удалить", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        }
                    }*@
                    <img class="img-thumbnail" width="120" height="120"
                         src="@Url.Action("GetImage", "Products",
                    new { Model.ProductId })" />

                    @{
                        string imagePath = Url.Action("GetImage", "Products",
                                            new { Model.ProductId });
                        if (imagePath == null)
                        {
                            <div class="form-control-static">Нет картинки</div>
                        }
                        else
                        {
                            <div class="form-group">
                                <img class="img-thumbnail" width="150" height="150"
                                     src="@imagePath" />
                                @Html.ActionLink("Удалить", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        }

                    }

                    <div style="position:relative;">
                        <label>Добавить картинку</label>
                        <input type="file" name="image" class="btn btn-default">
                        <span class='label label-info' id="upload-file-info"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <input type="submit" value="Сохранить" class="btn btn-primary"/>
            @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default"})
        </div>
    }
</div>